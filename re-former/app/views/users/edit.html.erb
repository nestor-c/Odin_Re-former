
<%= form_for(@user) do |f| %>
    <ul>
    <% @user.errors.full_messages.each do |error|%>
        <li><%= error %></li>
    <%end%>
    </ul>
    <%=f.label :username %>
    <%=f.text_field :username %> <br><br>
    <%=f.label :email %>
    <%=f.text_field :email, placeholder: "email@email.com"%><br><br>
    <%=f.label "Password:" %>
    <%=f.password_field :password%><br><br>
    <%=f.submit%>
<% end %>